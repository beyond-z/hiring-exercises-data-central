<!DOCTYPE html>
<html>
  <head>
    <title>Braven Data Central</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="shortcut icon" href="https://bebraven.org/wp-content/themes/bebraven/favicon.ico">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
      <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">Braven Data Central</a>
      <!--input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search"-->
      <ul class="navbar-nav px-3">
        <li class="nav-item text-nowrap">
          <a class="nav-link" href="#">Sign out</a>
        </li>
      </ul>
    </nav>

    <div class="container-fluid">
      <div class="row">
        <nav class="col-md-2 d-none d-md-block bg-light sidebar">
          <div class="sidebar-sticky">
            <ul class="nav flex-column">
              <li class="nav-item">
                <%= nav_link 'Home', root_path, feather: 'home' %>
              </li>
            </ul>

            <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
              <span>Static Data</span>
            </h6>
            <ul class="nav flex-column mb-2">
              <li class="nav-item">
                <%= nav_link 'Industries', industries_path, controller: 'industries' %>
              </li>
              <li class="nav-item">
                <%= nav_link 'Interests', interests_path, controller: 'interests' %>
              </li>
              <li class="nav-item">
                <%= nav_link 'Locations', locations_path, controller: 'locations' %>
              </li>
              <li class="nav-item">
                <%= nav_link 'Majors', majors_path, controller: 'majors' %>
              </li>
            </ul>
          </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
          <% if content_for?(:headline) %>
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
              <% if content_for?(:headline) %>
                <h1 class="h2">
                  <%= yield :headline %>
                </h1>
              <% end %>

              <% if content_for?(:headline_buttons) %>
               <div class="btn-toolbar mb-2 mb-md-0">
                  <div class="btn-group mr-2">
                    <%= yield :headline_buttons %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
            
          <%= yield %>
        </main>
      </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->

    <!-- Icons -->
    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
    <script>
      feather.replace()
    </script>
  </body>
</html>
