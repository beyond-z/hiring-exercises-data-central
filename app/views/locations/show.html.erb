<% content_for :headline do %>
  Location: <%= @location.name %>
<% end %>

<% content_for(:headline_buttons) do %>
  <%= link_to 'Back', locations_path, class: 'btn btn-sm btn-outline-secondary' %>
  <%= link_to 'JSON', location_path(@location, format: 'json'), class: 'btn btn-sm btn-secondary', target: '_blank' %>
<% end %>

<div class="row">
  <div class="col-sm">
    <h2 class="h4">Parents</h2>

    <% if @location.parents.empty? %>
      <p>None</p>
    <% else %>
      <ul>
        <% @location.parents.each do |parent| %>
          <li><%= link_to parent.name, location_path(parent) %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  
  <div class="col-sm">
    <h2 class="h4">Children</h2>

    <% if @location.children.empty? %>
      <p>None</p>
    <% else %>
      <ul>
        <% @location.children.each do |child| %>
          <li><%= link_to child.name, location_path(child) %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div> <!-- row -->